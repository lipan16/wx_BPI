.search {
  position: relative;
  display: flex;
  box-sizing: border-box;
  background-color: white;
  align-items: center;
}
.search-title {
  width: 5em;
  flex-shrink: 0;
  margin-left: 16px;
  margin-right: 8px;
  font-weight: bold;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search input {
  flex-grow: 1;
  display: block;
  box-sizing: border-box;
  background: #F7F8FA;
  border-radius: 20rpx;
  padding-left: 20rpx;
  font-size: 12px;
  margin-right: 8px;
}
.search-placeholder {
  font-size: 14px;
  color: #A9A6A6;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.swiper-container {
  width: 750rpx;
  height: 375rpx;
  position: relative;
  z-index: 1;
}
.swiper-container .swiper1 {
  width: 750rpx;
  height: 375rpx;
}
.swiper-container .swiper1 image {
  width: 750rpx;
  height: 375rpx;
}